{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["es2020", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "declaration": true,
    "declarationDir": "lib-types",
    "emitDeclarationOnly": true,
    "incremental": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["vite/client", "node"],
    "paths": {
      "qwik-lottie": ["./src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["src/root.tsx", "src/entry.*.tsx"]
}
